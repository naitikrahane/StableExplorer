"use client";
import { useEffect, useState } from 'react';
import { useParams } from 'next/navigation';
import { provider, shortAddress, formatGas, decodeMethod } from '@/lib/utils';
import { ethers } from 'ethers';
import Navbar from '@/components/Navbar';
import Link from 'next/link';
import { 
    Wallet, Code, Coins, ArrowRight, Layers, Copy, ExternalLink, 
    Activity, Box, Clock, Banknote, RefreshCw, FileText, Database, 
    ChevronDown, Filter, AlertCircle
} from 'lucide-react';

export default function AddressPage() {
  const { id } = useParams();
  
  // --- STATE ---
  const [summary, setSummary] = useState({ 
      balance: '0', 
      nonce: 0, 
      isContract: false, 
      code: '0x',
      type: 'LOADING...'
  });
  
  // Portfolio State
  const [holdings, setHoldings] = useState([]); // List of detected tokens
  const [netWorth, setNetWorth] = useState('0.00'); // Placeholder for future price feed
  
  // Lists State
  const [nativeTxs, setNativeTxs] = useState([]);
  const [tokenTxs, setTokenTxs] = useState([]);
  
  // UI State
  const [loading, setLoading] = useState(true);
  const [scanStatus, setScanStatus] = useState('INITIALIZING...');
  const [activeTab, setActiveTab] = useState('transactions');
  const [showHoldings, setShowHoldings] = useState(false);

  useEffect(() => {
    if(!id) return;

    const runUltraScan = async () => {
      try {
        setLoading(true);
        setScanStatus('FETCHING_ONCHAIN_STATE...');

        // 1. BASICS (Parallel Fetch)
        const [balance, code, count, latestBlock] = await Promise.all([
            provider.getBalance(id),
            provider.getCode(id),
            provider.getTransactionCount(id),
            provider.getBlockNumber()
        ]);

        const isContract = code !== '0x';
        let contractMeta = null;

        // 2. IDENTIFY ENTITY TYPE
        if (isContract) {
            setScanStatus('ANALYZING_CONTRACT_BYTECODE...');
            try {
                // Try ERC20 Interface
                const c = new ethers.Contract(id, [
                    "function name() view returns (string)",
                    "function symbol() view returns (string)", 
                    "function totalSupply() view returns (uint256)", 
                    "function decimals() view returns (uint8)"
                ], provider);
                const [n, s, ts, d] = await Promise.all([c.name(), c.symbol(), c.totalSupply(), c.decimals()]);
                contractMeta = { name: n, symbol: s, supply: ethers.formatUnits(ts, d), decimals: d };
                setActiveTab('token_transfers');
            } catch(e) { /* Not ERC20 */ }
        }

        setSummary({
            balance: ethers.formatEther(balance),
            nonce: count,
            isContract,
            code,
            type: contractMeta ? 'ERC-20 TOKEN' : (isContract ? 'SMART CONTRACT' : 'EOA WALLET'),
            meta: contractMeta
        });

        // 3. ENGINE A: NATIVE TX SCANNER (Deep Scan 500 Blocks)
        // Helps find native IN/OUT transactions
        setScanStatus('SCANNING_NATIVE_TXS (500 BLOCKS)...');
        const NATIVE_DEPTH = 500;
        const NATIVE_BATCH = 20;
        let foundNative = [];

        for (let i = 0; i < NATIVE_DEPTH; i += NATIVE_BATCH) {
            const batchPromises = [];
            for (let j = 0; j < NATIVE_BATCH; j++) {
                if (latestBlock - i - j >= 0) batchPromises.push(provider.getBlock(latestBlock - i - j, true));
            }
            const blocks = (await Promise.all(batchPromises)).filter(b => b);
            
            blocks.forEach(b => {
                if(b.transactions) {
                    b.transactions.forEach(tx => {
                        const t = typeof tx === 'string' ? null : tx;
                        if(t && (t.from.toLowerCase() === id.toLowerCase() || t.to?.toLowerCase() === id.toLowerCase())) {
                            foundNative.push({ ...t, timestamp: b.timestamp });
                        }
                    });
                }
            });
            if(foundNative.length > 50) break; // Optimization
        }
        
        setNativeTxs(foundNative.sort((a,b) => b.blockNumber - a.blockNumber));

        // 4. ENGINE B: PORTFOLIO DISCOVERY & LOGS (5000 Blocks)
        // Scan logs to find which tokens this address has interacted with
        setScanStatus('DISCOVERING_TOKEN_HOLDINGS...');
        const LOG_DEPTH = 5000;
        const transferTopic = "0xddf252ad1be2c89b69c2b068fc378daa952ba7f163c4a11628f55a4df523b3ef";
        const paddedId = ethers.zeroPadValue(id, 32).toLowerCase();

        const logs = await provider.getLogs({
            fromBlock: Math.max(0, latestBlock - LOG_DEPTH),
            toBlock: 'latest',
            topics: [transferTopic]
        });

        // Filter logs relevant to this address
        const relevantLogs = logs.filter(l => 
            l.address.toLowerCase() === id.toLowerCase() || 
            (l.topics[1] && l.topics[1].toLowerCase() === paddedId) || 
            (l.topics[2] && l.topics[2].toLowerCase() === paddedId)
        ).reverse();

        setTokenTxs(relevantLogs.slice(0, 100)); // Show max 100 in list

        // 5. BUILD PORTFOLIO (The Magic Part)
        // Extract unique token contracts from logs
        const uniqueTokenContracts = [...new Set(relevantLogs.map(l => l.address))];
        
        setScanStatus(`CHECKING BALANCES (${uniqueTokenContracts.length} TOKENS)...`);
        
        const holdingsData = [];
        // Add Native GUSDT first
        holdingsData.push({
            name: 'FlowStable',
            symbol: 'GUSDT',
            balance: ethers.formatEther(balance),
            contract: null, // Native
            isNative: true
        });

        // Fetch balance for each discovered token
        for (const tokenAddr of uniqueTokenContracts) {
            try {
                const erc20 = new ethers.Contract(tokenAddr, [
                    "function balanceOf(address) view returns (uint256)",
                    "function symbol() view returns (string)",
                    "function name() view returns (string)",
                    "function decimals() view returns (uint8)"
                ], provider);

                const [bal, sym, nm, dec] = await Promise.all([
                    erc20.balanceOf(id),
                    erc20.symbol(),
                    erc20.name(),
                    erc20.decimals()
                ]);

                if (bal > 0n) {
                    holdingsData.push({
                        name: nm,
                        symbol: sym,
                        balance: ethers.formatUnits(bal, dec),
                        contract: tokenAddr,
                        isNative: false
                    });
                }
            } catch(e) { /* Ignore non-standard tokens */ }
        }

        setHoldings(holdingsData);

      } catch(e) {
        console.error("Ultra Scan Error:", e);
      } finally {
        setLoading(false);
      }
    };

    runUltraScan();
  }, [id]);

  // --- SAFE COPY FUNCTION ---
  const handleCopy = () => {
      try {
          navigator.clipboard.writeText(id);
          alert("Address Copied to Clipboard");
      } catch(e) {
          console.warn("Clipboard API failed");
      }
  };

  // --- LOADING STATE ---
  if(loading) return (
    <div className="min-h-screen bg-[#050505] flex flex-col">
        <Navbar/>
        <div className="flex-1 flex flex-col items-center justify-center text-neon font-mono gap-6">
            <div className="relative">
                <div className="absolute inset-0 bg-neon blur-xl opacity-20 animate-pulse"></div>
                <div className="animate-spin rounded-full h-16 w-16 border-t-2 border-b-2 border-neon relative z-10"></div>
            </div>
            <div className="text-center">
                <p className="text-neon font-bold tracking-widest text-sm mb-2">{scanStatus}</p>
                <p className="text-gray-600 text-xs">Reconstructing history without DB...</p>
            </div>
        </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-[#050505] pb-20">
      <Navbar />
      <main className="max-w-[1600px] mx-auto px-4 md:px-6 pt-8">
        
        {/* TOP HEADER CARD */}
        <div className="terminal-card p-8 mb-8 bg-[#080808] border-t-4 border-t-neon">
            <div className="flex flex-col md:flex-row gap-8 items-start">
                
                {/* ENTITY ICON */}
                <div className={`w-20 h-20 flex items-center justify-center border-2 rounded-sm shadow-[0_0_40px_rgba(0,0,0,0.5)] ${summary.meta ? 'border-neon text-neon bg-neon/5' : 'border-gray-600 text-gray-500 bg-[#111]'}`}>
                    {summary.meta ? <Coins size={40}/> : (summary.isContract ? <Code size={40}/> : <Wallet size={40}/>)}
                </div>
                
                {/* INFO BLOCK */}
                <div className="flex-1 w-full">
                    <div className="flex flex-col md:flex-row md:items-center gap-4 mb-2">
                        <h1 className="text-3xl font-bold text-white font-mono">
                            {summary.meta ? summary.meta.name : (summary.isContract ? "Smart Contract" : "Address")}
                        </h1>
                        <span className="text-[10px] border border-neon text-neon px-3 py-1 rounded-full bg-neon/10 font-bold tracking-wider w-fit">
                            {summary.type}
                        </span>
                    </div>
                    
                    {/* ADDRESS BAR */}
                    <div className="flex items-center gap-3 group cursor-pointer w-full md:w-fit" onClick={handleCopy}>
                        <p className="text-gray-400 font-mono text-sm bg-[#000] p-2 px-4 border border-[#222] break-all hover:text-white hover:border-neon transition rounded-sm">
                            {id}
                        </p>
                        <Copy size={18} className="text-gray-600 group-hover:text-neon transition"/>
                    </div>
                </div>
            </div>
        </div>

        {/* DASHBOARD GRID */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            
            {/* CARD 1: BALANCE & HOLDINGS */}
            <div className="terminal-card p-6 flex flex-col justify-between relative min-h-[140px]">
                <div className="flex justify-between items-start">
                    <p className="text-gray-500 text-[10px] font-mono font-bold uppercase tracking-widest">NATIVE BALANCE</p>
                    <div className="p-2 bg-neon/10 rounded-full text-neon"><Banknote size={16}/></div>
                </div>
                <div>
                    <p className="text-2xl font-bold font-mono text-white truncate">
                        {parseFloat(summary.balance).toFixed(4)} GUSDT
                    </p>
                    <div className="relative mt-2">
                        <button 
                            onClick={() => setShowHoldings(!showHoldings)}
                            className="flex items-center gap-2 text-xs text-gray-400 hover:text-neon border border-[#333] px-3 py-1.5 rounded bg-[#111] w-full justify-between"
                        >
                            <span>Holdings: {holdings.length} Tokens</span>
                            <ChevronDown size={14} className={`transition ${showHoldings ? 'rotate-180' : ''}`}/>
                        </button>
                        
                        {/* HOLDINGS DROPDOWN */}
                        {showHoldings && (
                            <div className="absolute top-full left-0 w-full mt-1 bg-[#0a0a0a] border border-[#333] shadow-xl z-20 max-h-60 overflow-auto custom-scrollbar rounded-sm">
                                {holdings.map((h, i) => (
                                    <div key={i} className="p-3 hover:bg-[#111] border-b border-[#222] last:border-0 flex justify-between items-center">
                                        <div className="flex flex-col">
                                            <span className="text-xs text-white font-bold">{h.symbol}</span>
                                            <span className="text-[10px] text-gray-500">{h.name}</span>
                                        </div>
                                        <div className="text-right">
                                            <span className="text-xs text-neon font-mono">{parseFloat(h.balance).toFixed(4)}</span>
                                            {h.isNative && <span className="block text-[8px] text-gray-600">GAS</span>}
                                        </div>
                                    </div>
                                ))}
                            </div>
                        )}
                    </div>
                </div>
            </div>

            {/* CARD 2: TOKEN SPECIFIC OR TX STATS */}
            {summary.meta ? (
                <div className="terminal-card p-6 flex flex-col justify-between">
                    <div className="flex justify-between items-start">
                        <p className="text-gray-500 text-[10px] font-mono font-bold uppercase tracking-widest">TOKEN STATS</p>
                        <Coins size={16} className="text-gray-600"/>
                    </div>
                    <div className="space-y-1">
                        <div className="flex justify-between text-xs text-gray-400 border-b border-[#222] pb-1">
                            <span>Supply:</span>
                            <span className="text-white font-mono">{parseFloat(summary.meta.supply).toLocaleString()}</span>
                        </div>
                        <div className="flex justify-between text-xs text-gray-400">
                            <span>Decimals:</span>
                            <span className="text-white font-mono">{summary.meta.decimals}</span>
                        </div>
                    </div>
                </div>
            ) : (
                <div className="terminal-card p-6 flex flex-col justify-between">
                    <div className="flex justify-between items-start">
                        <p className="text-gray-500 text-[10px] font-mono font-bold uppercase tracking-widest">TRANSACTION COUNT</p>
                        <Activity size={16} className="text-gray-600"/>
                    </div>
                    <p className="text-2xl font-bold font-mono text-white">{summary.nonce}</p>
                    <p className="text-[10px] text-gray-600 font-mono">Total Nonce</p>
                </div>
            )}

            {/* CARD 3: STATUS */}
            <div className="terminal-card p-6 flex flex-col justify-between border-l-4 border-l-neon bg-[#0c0c0c]">
                <div className="flex justify-between items-start">
                    <p className="text-gray-500 text-[10px] font-mono font-bold uppercase tracking-widest">ACCOUNT STATUS</p>
                    <div className="w-2 h-2 bg-neon rounded-full animate-pulse"></div>
                </div>
                <p className="text-xl font-bold font-mono text-white">ACTIVE</p>
                <p className="text-[10px] text-neon font-mono">Last activity in cached range</p>
            </div>
        </div>

        {/* HEAVY TABS & DATA TABLE */}
        <div className="terminal-card min-h-[600px]">
            {/* TAB CONTROLS */}
            <div className="flex bg-[#111] border-b border-[#222] overflow-x-auto">
                <button onClick={() => setActiveTab('transactions')} className={`px-8 py-4 text-xs font-mono font-bold uppercase whitespace-nowrap transition-all border-b-2 ${activeTab==='transactions' ? 'text-neon border-neon bg-neon/5' : 'text-gray-500 border-transparent hover:text-gray-300 hover:bg-[#1a1a1a]'}`}>
                    Native Transactions ({nativeTxs.length})
                </button>
                <button onClick={() => setActiveTab('token_transfers')} className={`px-8 py-4 text-xs font-mono font-bold uppercase whitespace-nowrap transition-all border-b-2 ${activeTab==='token_transfers' ? 'text-neon border-neon bg-neon/5' : 'text-gray-500 border-transparent hover:text-gray-300 hover:bg-[#1a1a1a]'}`}>
                    Token Transfers ({tokenTxs.length})
                </button>
            </div>

            <div className="p-0">
                {/* 1. NATIVE TRANSACTIONS TABLE */}
                {activeTab === 'transactions' && (
                    <>
                        <div className="p-3 bg-[#0a0a0a] border-b border-[#222] flex items-center gap-2 text-[10px] text-gray-500 font-mono">
                            <Filter size={10}/> SHOWING NATIVE GUSDT TRANSFERS (Last 500 Blocks Scan)
                        </div>
                        <div className="overflow-x-auto custom-scrollbar">
                            <table className="w-full text-left font-mono text-sm min-w-[1000px]">
                                <thead className="text-gray-500 bg-[#0f0f0f] border-b border-[#222]">
                                    <tr>
                                        <th className="p-4 w-48 font-normal text-[10px] uppercase">Tx Hash</th>
                                        <th className="p-4 w-32 font-normal text-[10px] uppercase">Method</th>
                                        <th className="p-4 w-24 font-normal text-[10px] uppercase">Block</th>
                                        <th className="p-4 w-32 font-normal text-[10px] uppercase">Age</th>
                                        <th className="p-4 w-48 font-normal text-[10px] uppercase">From</th>
                                        <th className="p-4 w-16 font-normal text-[10px] uppercase"></th>
                                        <th className="p-4 w-48 font-normal text-[10px] uppercase">To</th>
                                        <th className="p-4 w-32 font-normal text-[10px] uppercase text-right">Value (GUSDT)</th>
                                    </tr>
                                </thead>
                                <tbody className="divide-y divide-[#1a1a1a]">
                                    {nativeTxs.map((tx, i) => {
                                        const isIncoming = tx.to?.toLowerCase() === id.toLowerCase();
                                        const age = (Date.now()/1000 - tx.timestamp).toFixed(0);
                                        const method = decodeMethod ? decodeMethod(tx.data) : { name: 'Tx' };
                                        
                                        return (
                                            <tr key={i} className="hover:bg-[#111] transition group">
                                                <td className="p-4"><Link href={`/tx/${tx.hash}`} className="text-neon hover:underline decoration-dashed">{shortAddress(tx.hash)}</Link></td>
                                                <td className="p-4"><span className="text-[10px] border border-[#333] px-2 py-1 rounded bg-[#0a0a0a] text-gray-400 uppercase">{method.name || 'Transfer'}</span></td>
                                                <td className="p-4 text-blue-400">{tx.blockNumber}</td>
                                                <td className="p-4 text-gray-500 text-xs">{age}s ago</td>
                                                <td className="p-4 text-gray-400"><Link href={`/address/${tx.from}`} className="hover:text-white">{shortAddress(tx.from)}</Link></td>
                                                <td className="p-4 text-center">
                                                    <span className={`px-2 py-0.5 rounded text-[9px] border font-bold ${isIncoming ? 'border-green-800 text-green-500 bg-green-900/20' : 'border-yellow-800 text-yellow-500 bg-yellow-900/20'}`}>
                                                        {isIncoming ? 'IN' : 'OUT'}
                                                    </span>
                                                </td>
                                                <td className="p-4 text-gray-400"><Link href={`/address/${tx.to}`} className="hover:text-white">{shortAddress(tx.to)}</Link></td>
                                                <td className="p-4 text-white font-bold text-right">{parseFloat(ethers.formatEther(tx.value)).toFixed(4)}</td>
                                            </tr>
                                        );
                                    })}
                                    {nativeTxs.length === 0 && (
                                        <tr>
                                            <td colSpan="8" className="p-20 text-center text-gray-600 font-mono">
                                                <div className="flex flex-col items-center gap-2">
                                                    <Box size={40} className="opacity-20"/>
                                                    <span>NO NATIVE TXS FOUND IN CACHE</span>
                                                    <span className="text-xs text-gray-700">Checking last 500 blocks only</span>
                                                </div>
                                            </td>
                                        </tr>
                                    )}
                                </tbody>
                            </table>
                        </div>
                    </>
                )}

                {/* 2. TOKEN TRANSFERS TABLE */}
                {activeTab === 'token_transfers' && (
                    <>
                        <div className="p-3 bg-[#0a0a0a] border-b border-[#222] flex items-center gap-2 text-[10px] text-gray-500 font-mono">
                            <Filter size={10}/> SHOWING ERC-20 TRANSFERS (Last 5000 Blocks Logs)
                        </div>
                        <div className="overflow-x-auto custom-scrollbar">
                            <table className="w-full text-left font-mono text-sm min-w-[900px]">
                                <thead className="text-gray-500 bg-[#0f0f0f] border-b border-[#222]">
                                    <tr>
                                        <th className="p-4 w-40 font-normal text-[10px] uppercase">Tx Hash</th>
                                        <th className="p-4 w-24 font-normal text-[10px] uppercase">Block</th>
                                        <th className="p-4 w-48 font-normal text-[10px] uppercase">From</th>
                                        <th className="p-4 w-16 font-normal text-[10px] uppercase"></th>
                                        <th className="p-4 w-48 font-normal text-[10px] uppercase">To</th>
                                        <th className="p-4 font-normal text-[10px] uppercase">Token Contract</th>
                                    </tr>
                                </thead>
                                <tbody className="divide-y divide-[#1a1a1a]">
                                    {tokenTxs.map((log, i) => {
                                        const from = ethers.stripZerosLeft(log.topics[1] || '0x0');
                                        const to = ethers.stripZerosLeft(log.topics[2] || '0x0');
                                        const isIncoming = to.toLowerCase() === id.toLowerCase();

                                        return (
                                            <tr key={i} className="hover:bg-[#111] transition group">
                                                <td className="p-4"><Link href={`/tx/${log.transactionHash}`} className="text-neon hover:underline decoration-dashed">{shortAddress(log.transactionHash)}</Link></td>
                                                <td className="p-4 text-blue-400">{parseInt(log.blockNumber, 16)}</td>
                                                <td className="p-4 text-gray-400"><Link href={`/address/${from}`} className="hover:text-white">{shortAddress(from)}</Link></td>
                                                <td className="p-4 text-center">
                                                    <span className={`px-2 py-0.5 rounded text-[9px] border font-bold ${isIncoming ? 'border-green-800 text-green-500 bg-green-900/20' : 'border-yellow-800 text-yellow-500 bg-yellow-900/20'}`}>
                                                        {isIncoming ? 'IN' : 'OUT'}
                                                    </span>
                                                </td>
                                                <td className="p-4 text-gray-400"><Link href={`/address/${to}`} className="hover:text-white">{shortAddress(to)}</Link></td>
                                                <td className="p-4">
                                                    <Link href={`/address/${log.address}`} className="text-gray-300 hover:text-neon flex items-center gap-2 group-hover:text-white transition">
                                                        <Box size={14}/> {shortAddress(log.address)}
                                                    </Link>
                                                </td>
                                            </tr>
                                        );
                                    })}
                                    {tokenTxs.length === 0 && (
                                        <tr>
                                            <td colSpan="6" className="p-20 text-center text-gray-600 font-mono">
                                                <Layers size={40} className="mx-auto mb-4 opacity-20"/>
                                                [ NO TOKEN EVENTS DETECTED IN SCAN RANGE ]
                                            </td>
                                        </tr>
                                    )}
                                </tbody>
                            </table>
                        </div>
                    </>
                )}
            </div>
        </div>

      </main>
    </div>
  );
}

// UI COMPONENTS
const StatBox = ({label, value, sub, highlight, icon, color}) => (
    <div className={`terminal-card p-6 flex flex-col justify-between h-28 relative overflow-hidden ${highlight ? 'border-l-4 border-l-neon bg-[#0c0c0c]' : ''}`}>
        <div className="flex justify-between items-start mb-2 relative z-10">
            <p className="text-gray-500 text-[10px] font-mono font-bold uppercase tracking-widest">{label}</p>
            {icon && <div className="text-gray-600">{icon}</div>}
        </div>
        <div className="relative z-10">
            <p className={`text-xl font-bold font-mono ${color || 'text-white'} truncate`}>{value}</p>
            {sub && <p className="text-[10px] text-neon mt-1 font-mono">{sub}</p>}
        </div>
        {highlight && <div className="absolute right-0 bottom-0 p-4 opacity-5 pointer-events-none"><Coins size={64}/></div>}
    </div>
);

const TabButton = ({active, onClick, label}) => (
    <button 
        onClick={onClick} 
        className={`px-8 py-4 text-xs font-mono font-bold uppercase whitespace-nowrap transition-all border-b-2 ${active ? 'text-neon border-neon bg-neon/5' : 'text-gray-500 border-transparent hover:text-gray-300 hover:bg-[#111]'}`}
    >
        {label}
    </button>
);
